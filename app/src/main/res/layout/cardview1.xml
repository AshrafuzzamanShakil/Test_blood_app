<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout_id"
    android:layout_margin="20dp"

    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:id="@+id/card_view_id"
        app:cardElevation="10dp"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/card1_imag_1_id"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/image1"
                    android:layout_marginRight="10dp"
                    >

                </ImageView>

                <TextView
                    android:id="@+id/card1_text1_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Md Ashrafuzzaman"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    >

                </TextView>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/bloddrop"

                    >

                </ImageView>
                <TextView
                    android:id="@+id/card1_text2_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="A (positive)"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"

                    android:textSize="12sp"
                    >

                </TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_location_on_24"
                    android:layout_marginLeft="10dp"
                    >

                </ImageView>
                <TextView
                    android:id="@+id/card1_text3_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mirpur 2,Dhaka 1216"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    >

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_local_hospital_24"
                    android:layout_marginLeft="10dp"
                    >

                </ImageView>
                <TextView
                    android:id="@+id/card1_text4_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ibna Sina Hospital "
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expandable_layout_id"
                android:layout_marginTop="50dp"
                android:visibility="gone"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/details1_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text=" And this is a test text."
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_margin="30dp"

                    >

                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_baseline_call_24"
                        android:layout_marginRight="5dp"

                        >

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/card1_phone_1_id"
                        android:text="01798915935"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"

                        >

                    </TextView>


                </LinearLayout>


                <Button
                    android:id="@+id/call_button_id"
                    android:layout_width="270dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:text="Call Now"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/blackbutton"

                    >

                </Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="You Want to Donate?"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    >

                </TextView>

                <Button
                    android:id="@+id/yes_button_id"
                    android:layout_width="270dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:text="Yes I am "
                    android:layout_marginTop="25dp"
                    android:background="@drawable/blackbutton"
                    android:layout_marginBottom="45dp"

                    >

                </Button>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>